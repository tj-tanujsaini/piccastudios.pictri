<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lifelineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/ap_ll1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/buttonLL1"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingStart="2dp"
                android:text="Correct Answer"
                android:textColor="@color/textWhite"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:padding="5dp"
                android:src="@drawable/icon_choosecorrect"
                android:tint="@color/textWhite" />

            <RelativeLayout
                android:id="@+id/ap_adView_ll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/darkBlack"
                    android:clickable="false"
                    android:drawableTop="@drawable/icon_adplay"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:text="Play Ad"
                    android:textColor="@color/textWhite"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.6"
                    android:background="@color/darkBlack"
                    android:clickable="false"
                    android:visibility="visible" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ap_ll2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/buttonLL2"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingStart="2dp"
                android:text="50/50"
                android:textColor="@color/textWhite"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:padding="5dp"
                android:src="@drawable/icon_twooptions"
                android:tint="@color/textWhite" />

            <RelativeLayout
                android:id="@+id/ap_adView_ll2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/darkBlack"
                    android:clickable="false"
                    android:drawableTop="@drawable/icon_adplay"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:text="Play Ad"
                    android:textColor="@color/textWhite"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.6"
                    android:background="@color/darkBlack"
                    android:clickable="false"
                    android:visibility="visible" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ap_ll3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/buttonLL3"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingStart="2dp"
                android:text="Skip"
                android:textColor="@color/textWhite"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:padding="5dp"
                android:src="@drawable/icon_skip"
                android:tint="@color/textWhite" />

            <RelativeLayout
                android:id="@+id/ap_adView_ll3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/darkBlack"
                    android:clickable="false"
                    android:drawableTop="@drawable/icon_adplay"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:text="Play Ad"
                    android:textColor="@color/textWhite"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.6"
                    android:background="@color/darkBlack"
                    android:clickable="false"
                    android:visibility="visible" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ap_ll4"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/buttonLL4"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingStart="2dp"
                android:text="Add Time"
                android:textColor="@color/textWhite"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:padding="5dp"
                android:src="@drawable/icon_addtime"
                android:tint="@color/textWhite" />

            <RelativeLayout
                android:id="@+id/ap_adView_ll4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/darkBlack"
                    android:clickable="false"
                    android:drawableTop="@drawable/icon_adplay"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:text="Play Ad"
                    android:textColor="@color/textWhite"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.6"
                    android:background="@color/darkBlack"
                    android:clickable="false"
                    android:visibility="visible" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/ap_lifelineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lifelineLayout"
        android:layout_centerHorizontal="true"
        android:text="Watch a Video to Revive your lifeline Now or Wait 3 Hours"
        android:visibility="invisible" />

</RelativeLayout>