<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgreen4"
    tools:context=".QuestionFrames.LevelOver">

    <TextView
        android:id="@+id/alo_multiplyThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:fontFamily="@font/carter_one"
        android:shadowColor="@color/darkBlack"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:text="x2"
        android:textColor="@color/textYellow"
        android:textSize="40sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/alo_starLeft"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/alo_starCenter"
        android:src="@drawable/png_star" />

    <ImageView
        android:id="@+id/alo_starLeft2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/alo_starCenter"
        android:alpha="0.4"
        android:src="@drawable/png_star"
        android:tint="@color/darkBlack" />

    <ImageView
        android:id="@+id/alo_starCenter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/png_star" />

    <ImageView
        android:id="@+id/alo_starCenter2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.4"
        android:src="@drawable/png_star"
        android:tint="@color/darkBlack" />

    <ImageView
        android:id="@+id/alo_starRight"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/alo_starCenter"
        android:src="@drawable/png_star" />

    <ImageView
        android:id="@+id/alo_starRight2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/alo_starCenter"
        android:alpha="0.4"
        android:src="@drawable/png_star"
        android:tint="@color/darkBlack" />

    <TextView
        android:id="@+id/alo_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alo_starCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/autour_one"
        android:shadowColor="@color/textYellow"
        android:shadowDx="-1"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="000"
        android:textColor="@color/textWhite"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/alo_totalStarsIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/png_star" />

        <TextView
            android:id="@+id/alo_totalStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/amaranth"
            android:text="000"
            android:textColor="@color/textYellow"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/alo_home"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/rec_round_trans"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/alo_homeIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/png_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/amaranth"
                android:shadowColor="@color/darkBlack"
                android:shadowDx="-1"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:text="Home"
                android:textColor="@color/textWhite"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alo_next"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rec_round_trans"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:visibility="invisible">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/png_next"
                android:tint="@color/textWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/amaranth"
                android:shadowColor="@color/darkBlack"
                android:shadowDx="-1"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:text="Next"
                android:textColor="@color/textWhite"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alo_watchAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rec_round_trans"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/luckiest_guy"
            android:shadowColor="@color/darkBlack"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:text="Watch Ad!"
            android:textColor="@color/textYellow"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/carter_one"
            android:shadowColor="@color/textWhite"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:text="To Continue" />

    </LinearLayout>

</RelativeLayout>