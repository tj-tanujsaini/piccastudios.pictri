<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_white1"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".UserSection.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@drawable/back_bar" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:alpha="0.2"
                android:background="@color/buttonLL1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ap_userCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/ap_userImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_account" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/ap_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ap_userCard"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rec_semi_right"
                android:fontFamily="@font/amaranth"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:text="Tanuj Saini"
                android:textColor="@color/textWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ap_badgeIcon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/ap_badgeIcon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:src="@drawable/ach_scout" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/ap_badgeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rec_semi_round"
                android:fontFamily="@font/amaranth"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="Quiz Scout"
                android:textColor="@color/textWhite"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/ap_levels"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grad_non_button">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"
                    android:fontFamily="@font/carter_one"
                    android:text="Levels Completed"
                    android:textAlignment="center"
                    android:textColor="@color/darkBlack"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/connection" />

            </RelativeLayout>

            <TextView
                android:id="@+id/ap_levelsCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/amaranth"
                android:text="#00018"
                android:textColor="@color/textWhite"
                android:textSize="25sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/ap_achievements"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grad_non_button">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"
                    android:fontFamily="@font/carter_one"
                    android:text="Stars"
                    android:textAlignment="center"
                    android:textColor="@color/darkBlack"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/png_star" />

            </RelativeLayout>

            <TextView
                android:id="@+id/ap_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/amaranth"
                android:text="#00018"
                android:textColor="@color/textWhite"
                android:textSize="25sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/ap_quesAnswered"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grad_non_button">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"
                    android:fontFamily="@font/carter_one"
                    android:text="Total Questions"
                    android:textAlignment="center"
                    android:textColor="@color/darkBlack"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/connection" />

            </RelativeLayout>

            <TextView
                android:id="@+id/ap_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/amaranth"
                android:text="#00018"
                android:textColor="@color/textWhite"
                android:textSize="25sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/ap_correctAns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grad_non_button">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"
                    android:fontFamily="@font/carter_one"
                    android:text="Correct Answers"
                    android:textAlignment="center"
                    android:textColor="@color/darkBlack"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/png_star" />

            </RelativeLayout>

            <TextView
                android:id="@+id/ap_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/amaranth"
                android:text="98%"
                android:textColor="@color/textWhite"
                android:textSize="25sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ap_showAchieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/rec_round_white_grad"
            android:fontFamily="@font/amaranth"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:shadowColor="@color/darkBlack"
            android:shadowDx="-1"
            android:shadowRadius="1"
            android:text="Achievements"
            android:textColor="@color/textWhite"
            android:textSize="25sp" />

        <include layout="@layout/lifeline_frame" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ap_adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/profile_banner_ad" />

    </RelativeLayout>

</LinearLayout>